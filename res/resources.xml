<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<resources>

	<!-- shaders -->
	<resource type="shader" id="MESH_SHADER" filename="shaders/mesh" />
	<resource type="shader" id="MESH_INSTANCED_SHADER" vertex="shaders/meshInstanced.vert" fragment="shaders/mesh.frag" />
	<resource type="shader" id="SHADOW_SHADER" filename="shaders/shadow" />
	<resource type="shader" id="SHADOW_INSTANCED_SHADER" vertex="shaders/shadowInstanced.vert" geometry="shaders/shadow.geom" fragment="shaders/shadow.frag" />
	<resource type="shader" id="AXIS_SHADER" filename="shaders/axis" />
	<resource type="shader" id="RENDER_QUAD_SHADER" filename="shaders/renderQuad" />
	<resource type="shader" id="STREET_DEBUG_SHADER" filename="shaders/streetDebug" />

	<!-- meshes -->
	<resource type="mesh" id="BUILDMARKER_MESH" filename="models/buildMarker.obj" />
	<resource type="mesh" id="CAR_MESH" filename="models/car.obj" />	
	<resource type="mesh" id="TREE_MESH" filename="models/tree.obj" />

	<!-- materials -->
	<resource type="material" filename="models/basic_street.mtl">
		<material name="basic_street" id="BASIC_STREET_MATERIAL" />
		<material name="basic_street_preview" id="BASIC_STREET_PREVIEW_MATERIAL" />
	</resource>
	<resource type="material" filename="models/ground.mtl">
		<material name="ground" id="GROUND_MATERIAL"/>
	</resource>
	<resource type="material" filename="models/water.mtl" >
		<material name="water" id="WATER_MATERIAL" />
	</resource>

	<!-- streets -->
	<resource type="streetPack" id="BASIC_STREETS" roadwayWidth="3.0" roadwayHeight="0.1" sidewalkHeight="0.2" verticesPerCircle="32" shader="MESH_SHADER" material="BASIC_STREET_MATERIAL" />
	<resource type="streetPack" id="BASIC_STREETS_PREVIEW" roadwayWidth="3.0" roadwayHeight="0.1" sidewalkHeight="0.2" verticesPerCircle="32" shader="MESH_SHADER" material="BASIC_STREET_PREVIEW_MATERIAL" />
